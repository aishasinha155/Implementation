
#include<iostream>
using namespace std;
int main(){
    int n;
    cin>>n;
    int A[n];
    for(int i=0;i<n;i++){
        cin>>A[i];
    }
    int min=A[0];
    int max=A[0];
    int c1=0,c2=0;
    for(int i=0;i<n;i++){
        if(A[i]>max){
            max=A[i];
            c1++;
        }
        if(A[i]<min){
            min=A[i];
            c2++;
        }
    }
  cout<<c1<<" "<<c2;
}
